<br><br>
<%= link_to_function "Comments", "$('comments#{@blog.id}').toggle();" %>
<div id="comments<%= @blog.id %>" style="display:none;" class="comments">
<% @comments = @blog.comments %>
  <% cache @comments do %>
    -----------------------------------------------------------
    <% @comments.each do |comment| %>
      <div class="comment" >
	<hn><%=h comment.name %></hn>
	<hd><%= comment.created_at.to_date %></hd>
	<br>
	<div class="content">
	  <%=g_textile comment.content %>
	</div>
	<br>
      </div>
      ----------------------------
    <% end %>
  <% end %>
  <br><br>
  Add Comment
  <% form_for Comment.new do |f| %>
    <p>
      <%= hidden_field_tag :blog_id, @blog.id %>
      <%= f.label :name, 'name' %>:<br />
      <%= f.text_field :name, :size => 25 %><br />
    </p>
    <p>  
      <%= f.label :content, 'Content' %>:<br />
      <%= f.text_area :content, :size => "60x15" %><br />
    </p>
    <%= submit_tag "Create" %>
  <% end %>
</div>
<br><br><br>
