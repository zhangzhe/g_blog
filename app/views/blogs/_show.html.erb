<br>
<% cache @blog do %>
  <ht><%=link_to h(@blog.title), blog_path(@blog) %></ht>&nbsp;&nbsp;&nbsp;<%= link_to "(#{@blog.brother.type} version)", blog_path(@blog.brother) %><br>
  <hd><%= @blog.created_at.to_date %></hd>
  <br>
  <br>
  <div>   
    <%= g_textile @blog.content %>
  </div>
<% end %>

<br>
<%= link_to 'edit', edit_blog_path(@blog) if admin? %>
<%= link_to "destroy", @blog.blog_group, :confirm => 'Are you sure?', :method => :delete if admin? %>
<%= render(:partial => "comments/new") %>
